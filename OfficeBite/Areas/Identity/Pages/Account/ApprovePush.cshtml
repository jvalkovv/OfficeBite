@page
@model ApprovePushModel
@{
    ViewData["Title"] = "Approve Login Request";
}
<h2>Login Request Approval</h2>
<p>Login attempt detected. Do you approve?</p>

<form method="post">
    <input type="hidden" name="Token" value="@Model.Token" />
    <button type="submit" formaction="/Identity/Account/ApprovePush?handler=Approve">✅ Approve</button>
    <button type="submit" formaction="/Identity/Account/ApprovePush?handler=Deny">❌ Deny</button>
</form>
