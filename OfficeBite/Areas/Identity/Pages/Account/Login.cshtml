@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link rel="stylesheet" href="~/Styles/StyleSheet.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<div class="login-container">
    <div class="cover">
        <div class="front">
            <img src="~/Styles/gallery-1.jpg" alt="">
            <div class="text">
                <span class="text-1">Every new friend is a <br> new adventure</span>
                <span class="text-2">Let's get connected</span>
            </div>
        </div>
    </div>

    <div class="forms">
        <div class="form-content">
            <div class="login-form">
                <div asp-validation-summary="ModelOnly" class="validate-form"></div>
                <div class="title">LOGIN</div>
                <form id="account" method="post">
                    <div class="input-boxes">
                        <div class="input-box">
                            <i class="fas fa-envelope"></i>
                            <input asp-for="Input.Username" class="form-control" autocomplete="Username" placeholder="Username/Email" aria-required="true" />
                        </div>
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                        <div class="input-box">
                            <i class="fas fa-lock"></i>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Password" aria-required="true" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <div class="button input-box">
                            <input id="login-submit" type="submit" value="Submit">
                        </div>
                   @*      <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div> *@
                        <div class="text sign-up-text">Don't have an account? <a asp-area="Identity" asp-page="/Account/Register">Sign Up now</a></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
